{
  "#guard": {
    "prefix": "#guard",
    "body": [
      "#ifndef ${TM_FILENAME_BASE:FILENAME}_H_",
      "#define ${TM_FILENAME_BASE:FILENAME}_H_",
      "",
      "$0",
      "",
      "#endif  // ${TM_FILENAME_BASE:FILENAME}_H_"
    ],
    "description": "Simple header guard using filename"
  },
  "#guardmanual": {
    "prefix": "#guardmanual",
    "body": [
      "#ifndef ${1:HEADER_NAME}_H_",
      "#define ${1:HEADER_NAME}_H_",
      "",
      "$0",
      "",
      "#endif  // ${1:HEADER_NAME}_H_"
    ],
    "description": "Manual header guard - you type the name"
  },
  "#pragma": {
    "prefix": "#pragma",
    "body": [
      "#pragma once",
      "",
      "$0"
    ],
    "description": "Modern header guard using pragma once"
  }
}
